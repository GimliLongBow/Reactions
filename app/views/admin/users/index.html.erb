<section class="panel panel-default">
  <div class="panel-heading">
    <strong><i class="fa fa-male fa-fw"></i> Users</strong>
    <div class="pull-right">
      <%= link_to 'New User', new_admin_user_path, class: 'btn btn-success btn-xs' %>
    </div>
  </div>
  <div class="panel-body">
    <table class="responsive table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.name, edit_admin_user_path(user) %></td>
            <td><%= user.email %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>

<%= paginate @users %>
