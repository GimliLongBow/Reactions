<%= simple_form_for([:admin, @user]) do |f| %>

  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <div class="pull-right">
    <%= f.button :submit, 'Save', class: 'btn btn-success' %>
  </div>

  <%= link_to 'Remove', admin_user_path(@user), method: :delete, data: { confirm: 'Are you sure you want to remove this user?' }, id: "delete_#{@user.id}", class: 'btn btn-danger' if @user.id %>
<% end %>
