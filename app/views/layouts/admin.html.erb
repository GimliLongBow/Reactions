<!DOCTYPE html>
<html>
<head>
  <title>Reactions</title>

  <%= render partial: 'shared/styles_meta' %>

</head>
<body>

  <section id="container" >
    <!-- **********************************************************************************************************************************************************
    TOP BAR CONTENT & NOTIFICATIONS
    *********************************************************************************************************************************************************** -->
    <!--header start-->
    <header class="header black-bg">
      <div class="sidebar-toggle-box">
        <div id="toggle-navigation" class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
      </div>
      <!--logo start-->
      <a href="index.html" class="logo"><b>DASHGUM FREE</b></a>
      <!--logo end-->
      <div class="nav notify-row" id="top_menu">
        <!--  notification start -->
        <ul class="nav top-menu">

        </ul>
        <!--  notification end -->
      </div>
      <div class="top-menu">
        <ul class="nav pull-right top-menu">
          <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'logout' %></li>
        </ul>
      </div>
    </header>
    <!--header end-->

    <!-- **********************************************************************************************************************************************************
    MAIN SIDEBAR MENU
    *********************************************************************************************************************************************************** -->
    <!--sidebar start-->
    <aside>
      <div id="sidebar"  class="nav-collapse ">
        <!-- sidebar menu start-->
        <ul class="sidebar-menu" id="nav-accordion">

          <p class="centered"><a href="profile.html"><img src="http://www.gravatar.com/avatar/<%= Digest::MD5.hexdigest(current_user.email) %>" class="img-circle" width="60"></a></p>
          <h5 class="centered"><%= current_user.name %></h5>

          <li class="mt">
            <a href="/admin">
              <i class="fa fa-dashboard"></i>
              <span>Dashboard</span>
            </a>
          </li>

          <li class="sub-menu">
            <a href="/admin/users" >
              <i class=" fa fa-bar-chart-o"></i>
              <span>Users</span>
            </a>
          </li>

          <li class="sub-menu">
            <a href="/admin/reviews" >
              <i class=" fa fa-pencil-square-o "></i>
              <span>Reviews</span>
            </a>
          </li>

        </ul>
        <!-- sidebar menu end-->
      </div>
    </aside>
    <!--sidebar end-->

    <!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
      <section class="wrapper site-min-height">
        <!-- <h3><i class="fa fa-angle-right"></i> Blank Page</h3> -->
        <div class="row mt">
          <div class="col-lg-12">
            <% if flash[:notice] %><div class="notice"><%= flash[:notice] %></div><% end %>
            <% if flash[:error] %><div class="error"><%= flash[:error] %></div><% end %>

            <%= yield %>
          </div>
        </div>
      </section><!-- /wrapper -->
    </section><!-- /MAIN CONTENT -->

    <!--main content end-->
    <!--footer start-->
    <footer class="site-footer">
      <div class="text-center">
        2014 - Reactions
        <a href="#" class="go-top">
          <i class="fa fa-angle-up"></i>
        </a>
      </div>
    </footer>
    <!--footer end-->
  </section>

  <%= render partial: 'shared/scripts' %>
</body>
</html>
