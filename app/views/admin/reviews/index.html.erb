<section class="panel panel-default">
  <div class="panel-heading">
    <strong><i class="fa fa-male fa-fw"></i> Reviews</strong>
    <div class="pull-right">
      <%= link_to 'New review', new_admin_review_path, class: 'btn btn-success btn-xs' %>
    </div>
  </div>
  <div class="panel-body">
    <table class="responsive table table-striped">
      <thead>
        <tr>
          <th>User Name</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td><%= link_to review.user.name, edit_admin_review_path(review) %></td>
            <td><%= review.rating %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>

<%= paginate @reviews %>
